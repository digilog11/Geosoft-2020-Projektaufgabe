<header class="container-fluid bg-dark">
  <nav class="navbar navbar-expand-md navbar-dark">
    <button type="button" class="navbar-toggler hidden-sm-up" data-toggle="collapse" data-target="#navCollapse">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navCollapse">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link " href="http://localhost:3000/dashboard_doctor">Home</a>
        </li>
        <li class="nav-item dropdown ml-auto">
          <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false"> <%= user.name %> </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <a class="dropdown-item" href="/doctors/logout">Log out</a>
          </div>
        </li>
      </ul>
    </div>
  </nav>
</header>

<main role="main" class="container-fluid">
  <div class="row mt-5 mb-5">
    <div class="col-xl-8 m-auto">
      <h2 class="text-center">Mark all busrides of a user as infection risk</h2>
      <div class="col-xl">
        <div class="row mt-4 mb-5">
          <div class="col-sm-10">
            <input class="form-control" id="userToFind" type="text" name="name" placeholder="User">
          </div>
          <div class="col-sm-2">
            <button onclick="findUser()" class='btn btn-secondary'>Search</button>
          </div>
        </div>
      </div>
      <div class="col-xl mt-2 mb-5" id="foundUser">
        <%- include ("./partials/messages2"); %>
      </div>
      <h2 class="text-center">Mark a single busride as infection risk</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6" id="mapContainer"></div>
    <div class="col-md-6" id="busrideInfo">
      <%- include ("./partials/messages"); %>
    </div>
  </div>
</main>
